<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="CondominioApp.Views.CondominosView"
    Width="800" Height="500"
    Background="White"
    Title="Gestão de Condomínio - Lista de Condóminos">

    <DockPanel Margin="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ListBox ItemsSource="{Binding Condominos}"
                Background="#F9FAFB"
                BorderBrush="#DDDDDD"
                BorderThickness="1"
                SelectionMode="Single"
                SelectedItem="{Binding CondominoSelecionado, Mode=TwoWay}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="4"
                            Padding="10"
                            Background="White"
                            BorderBrush="#E5E7EB"
                            BorderThickness="1"
                            CornerRadius="6">
                            <Grid ColumnDefinitions="2*,Auto" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Nome}" FontWeight="SemiBold"
                                    VerticalAlignment="Center" />
                                <TextBlock Text="{Binding Fracao}" Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Foreground="#444" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
    </DockPanel>
</Window>